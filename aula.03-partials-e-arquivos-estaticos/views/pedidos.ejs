<%- include ('partials/header.ejs') %>
    <h1>Pedidos</h1>
 
    <%# Comentário no EJS %>
 
    <h4>forEach sem tabela:</h4>
 
    <% pedidos.forEach((pedido) => { %>
    <p>Produto: <%= pedido.produto %> <br></p>
    <p>Valor: <%= pedido.valor %> <br><br></p>
    <% }) %>
 
    <h4>forEach com tabela</h4>
    <table border="1">
       <tr>
        <th width="150px">Produto:</th>
        <th>Preço:</th>
       </tr>
       <tr>
        <% pedidos.forEach((pedido) => { %>
            <td><%= pedido.produto %></td>
            <td><%= pedido.valor %></td>
       </tr>
       <% }) %>
    </table>
</body>
</html>
